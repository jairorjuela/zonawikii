<!-- Formulario para el inicio de una nueva sesion -->
<div class="container">
  <div class="row justify-content-md-center">

    <div class="col-4">
      <h1>Ingresar</h1>
      <br>
      <%= form_tag controller: :sessions, action: :create do %>
        <div class="form-group">
          <%= label_tag(:email, '<h5><i class="fas fa-at"></i>  Ingresa tu E-mail</h5>'.html_safe) %>
          <%= email_field_tag(:email, nil, class: 'form-control input-lg', :autocomplete => :off, placeholder: "Correo electrónico") %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, '<h5><i class="fas fa-key"></i>  Ingresa tu contraseña</h5>'.html_safe) %>
          <%= password_field_tag(:password, nil, class: 'form-control input-lg', :autocomplete => :off, placeholder: "Contraseña") %>
        </div>
        <div class="text-right"><%= submit_tag("Ingresar", class: 'btn btn-outline-info btn-block btn-lg') %>
        </div>
        <br>
        <%= link_to "Crear cuenta", new_user_path, class: "btn btn-lg pull-left", id: "nuevo" %>
      <% end %>
    </div>

    <div class="col-8 py-5 px-lg-4">
      <blockquote class="blockquote text-center">
        <br>
        <br>
        <h1>
          TO-DO list, la App que lleva un registro de tus tareas pendientes.
        </h1>
      </blockquote>
    </div>

  </div>
</div>
