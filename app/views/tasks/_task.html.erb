<tr id="task_<%= task.id %>" class="<%= task.done %>">
  <td><%= task.name %></td>
  <td><%= task.priority %></td>
  <td><%= task.done %></td>
  <td>
    <%= link_to 'Editar Tarea', edit_task_path(task), remote: true, :class => 'btn btn-sm btn-info' %>
    <%= link_to 'Eliminar Tarea', task, remote: true, :method => :delete, data: {confirm: "Â¿Confirmas eliminar la tarea: #{task.name} ?"}, :class => 'btn btn-sm btn-danger' %>
    <%= link_to 'Tarea Hecha', task_set_done_path(task), remote: true, :class => 'done-state', :id => 'task-id' %>
  </td>
</tr>
