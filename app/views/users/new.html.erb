<!-- Formulario para crear un nuevo usuario  -->
<div class="container">
  <div class="row justify-content-md-center">

    <div class="col-4">
      <h1>Crear Cuenta</h1>
      <br>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= label_tag(:email, '<h5><i class="fas fa-at"></i>  Ingresa tu E-mail</h5>'.html_safe) %>
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email", placeholder: "Correo electr칩nico" %>
        </div>

        <div class="form-group">
          <%= label_tag(:email, '<h5><i class="fas fa-at"></i>  Ingresa una contrase침a</h5>'.html_safe) %>
          <%= f.password_field :password, class: "form-control input-lg", placeholder: "Contrase침a", :autocomplete => :off, placeholder: "Contrase침a" %>
        </div>

        <div class="form-group">
          <%= label_tag(:email, '<h5><i class="fas fa-user"></i>  Ingresa un nombre de cuenta</h5>'.html_safe) %>
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre", :autocomplete => :off, placeholder: "Nombre" %>
        </div>

        <div class="actions">
          <%= f.submit "Crear cuenta", class: "btn btn-outline-info btn-block btn-lg" %>
        </div>
      <% end %>
      <br>
      <%= link_to "Ya tienes cuenta?", login_path, class: "btn btn-lg", id: "nuevo" %>
    </div>

    <div class="col-8 py-5 px-lg-5">
      <blockquote class="blockquote text-center">
        <br>
        <br>
        <h1>
          TO-DO list, la App que lleva un registro de tus tareas pendientes.
        </h1>
      </blockquote>
    </div>

  </div>
</div>
